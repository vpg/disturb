{
    "settings" : {
        "index" : {
            "number_of_shards" : 3,
            "number_of_replicas" : 0
        }
    },
    "mappings": {
        "workflow": {
            "dynamic": "false",
            "properties": {
                "finishedAt": {
                    "type":   "date",
                    "format": "yyyy-MM-dd HH:mm:ss"
                },
                "startedAt": {
                    "type":   "date",
                    "format": "yyyy-MM-dd HH:mm:ss"
                },
                "status":    { "type": "keyword"  },
                "steps": {
                    "type": "nested",
                    "properties": {
                        "name":    { "type": "keyword"  },
                        "jobList": {
                            "type": "nested",
                            "properties": {
                                "worker": { "type": "keyword" },
                                "status": { "type": "keyword" },
                                "finishedAt": {
                                    "type":   "date",
                                    "format": "yyyy-MM-dd HH:mm:ss"
                                },
                                "startedAt": {
                                    "type":   "date",
                                    "format": "yyyy-MM-dd HH:mm:ss"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
